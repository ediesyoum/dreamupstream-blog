<div>
  <h2>Post: <%= @post.title %></h2>

  <ol>
    <% @post.comments.each do |comment| %>
    <li><%= comment %></li>
    <% end %>
    <li>
      <%= form_tag "#", method: :patch do %>
        <input type="text" name="comment" placeholder="New comment" />
        <button type="submit">Add a comment</button>
      <% end %>
    </li>
  </ol>
</div>
